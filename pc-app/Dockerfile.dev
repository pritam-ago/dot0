FROM node:18-alpine

# Install system dependencies for development
RUN apk add --no-cache \
    curl \
    wget \
    git \
    build-base \
    python3 \
    pkgconfig

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install Node.js dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3002

# Start development server
CMD ["npm", "run", "dev"] 